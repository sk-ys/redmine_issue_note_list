<% if !@saved %>
  alert("<%= l(:issue_note_list_failed_to_add_note) %>");
<% else %>
  // replace form to view
  (() => {
    // Clear textarea
    $("textarea#add_issue_notes-<%= @issue.id %>").val("");

    // Close all pop-out contents
    $(".ui-dialog-content.journal.issue-<%= @issue.id %>").dialog("close");
    
    // Update rows
    const $notes = $("#issue-<%= @issue.id %>").children(".last_notes");
    $notes.empty().append($('<%= render_issue_notes(@issue, @number_of_notes) %>'));
  })();
<% end %>