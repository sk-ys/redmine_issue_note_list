<% if !@saved || @issue.current_journal.updated_on.blank? %>
  alert("<%= l(:issue_note_list_failed_to_add_note) %>");
<% else %>
  // replace form to view
  (() => {
    const $target = $("<%= "#add_notes_form-#{@issue.id}" %>").closest("div.add_notes_form_outer");
    $target.empty().append($('<%= render_issue_note(@issue, @issue.current_journal) %>'));
  })()
<% end %>